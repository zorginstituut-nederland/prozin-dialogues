{% assign products_alpha = site.editorial | sort: 'title' %}
{% assign first = true %}

[
	{% for item in products_alpha %}
        {% if item.layout == "prozin/general-article" %}
        	{% unless first %},{% endunless %}{% assign first = false %}
			{
		      "text": "{{ item.title }}",
		      "id": "{{ item.title | slugify }}"
		    }	
		{% endif %}
	{% endfor %}
]